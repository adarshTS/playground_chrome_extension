{
  "manifest_version": 3,
  "name": "Adarsh's Chrome Extension",
  "description": "My first Extension",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_title": "Send Message"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bstackdemo.com/"],
      "js": ["content-script.js"]
    }
  ]
}
