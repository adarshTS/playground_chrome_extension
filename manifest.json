{
  "manifest_version": 3,
  "name": "Adarsh's Chrome Extension",
  "description": "My first Extension",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_title": "Click to toggle",
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Toggle Popup"
    }
  },
  "permissions": ["contextMenus"]
}
